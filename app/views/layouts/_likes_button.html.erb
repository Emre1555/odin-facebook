<% like = current_user.likes.find_by(likable: likable) %>
<% if like %>
  <%= button_to like_path(like), method: :delete, class:"btn btn-floating mx-1" do%>
    <i class="far fa-thumbs-down"></i>
  <% end %>
<% else %>
    <%= button_to likes_path(like: { likable_id: likable.id, likable_type: likable.class.to_s }), method: :post, class:"btn btn-floating mx-1" do %>
      <i class="far fa-thumbs-up"></i>
    <% end %>   

<% end %>