<p id="notice" style="color: green"><%= notice %></p>
<%= link_to "#{@post.user.first_name} #{@post.user.last_name}", user_path(@post.user) %> <br>
<%= @post.content %> <br>


<%= @post.likes.count %> <br>
<%= render partial: "layouts/likes_button", locals: { likable: @post } %> <br>

<p> Comments </p> <br>
<% @post.comments.each do |comment| %>
  <%= comment.user.try(:email) %> <br>
  <%= comment.text %> <br>
<% end %>

<%= render "comments/form", comment: @comment %>


<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete %>
</div>
