<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <h1> Forgot your password? </h1>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field form-outline mb-4">
            <%= f.label :email, class:"form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
          </div>

          <div class="actions text-center text-lg-start mt-4 pt-2">
              <%= f.submit "Send me reset password instructions", class:"btn btn-sm btn-primary", style:"padding-left: 2.5rem; padding-right: 2.5rem;" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>

