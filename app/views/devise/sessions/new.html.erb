<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Sign in with</p>
 
            
                <%= button_to user_facebook_omniauth_authorize_path, method: :post, :data => {turbo: "false"}, class:"btn btn-primary btn-floating mx-1" do %>      
                   <i class="fa-brands fa-facebook-f"></i>  Facebook
                <% end %>
                  
          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Or</p>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-outline mb-4">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control form-control-lg" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control form-control-lg", placeholder:"Password" %>
          </div>

          <div class="d-flex justify-content-between my-4 align-items-center">
            <div class="form-check mb-0">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me, class:"form-check-input me-2" %>
                  <%= f.label :remember_me,  class:"form-check-label"  %>
                </div>
              <% end %>
            </div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class:"text-body" %>
            <% end %>
          </div>

          <div class="actions text-center text-lg-start mt-4 pt-2">
            <%= f.submit "Log in", class:"btn btn-lg btn-primary", style:"padding-left: 2.5rem; padding-right: 2.5rem;" %>
          

          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account?
            <%= link_to "Register", new_registration_path(resource_name), class:"link-danger" %>
            </p>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
