
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <h1> Sign Up</h1>
          <div class="d-flex flex-row align-items-center my-4 justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Sign in with</p>
 
            
                <%= button_to user_facebook_omniauth_authorize_path, method: :post, :data => {turbo: "false"}, class:"btn btn-primary btn-floating mx-1" do %>      
                   <i class="fa-brands fa-facebook-f"></i>  Facebook
                <% end %>
                  
          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Or</p>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="form-outline mb-4">

           <div class="field form-outline mb-4">
             <%= f.label :first_name, class:"form-label" %>
             <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class: "form-control form-control-md" %>
           </div>


           <div class="field form-outline mb-4">
             <%= f.label :last_name, class:"form-label" %>
             <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control form-control-md" %>
           </div>

           <div class="field form-outline mb-4">
             <%= f.label :location, class:"form-label" %>
             <%= f.text_field :location, placeholder: "Location", class: "form-control form-control-md" %>
           </div>

           <div class="field form-outline mb-4">
             <%= f.label :birthday, class:"form-label" %>
             <%= f.date_field :birthday, max: Date.today , class: "form-control form-control-md " %>
           </div>

           <div class="field form-outline mb-4">
             <%= f.label :email, class:"form-label" %>
             <%= f.email_field :email, placeholder: "E-mail Address", autocomplete:"email", class: "form-control form-control-md" %>
           </div>

           <div class="field form-outline mb-4">
             <%= f.label :password, class:"form-label" %>
               <% if @minimum_password_length %>
               <em>(<%= @minimum_password_length %> characters minimum)</em>
               <% end %><br />
             <%= f.password_field :password, placeholder: "Password", autocomplete:"new-password", class: "form-control form-control-md" %>
           </div>

            <div class="field form-outline mb-4">
             <%= f.label :password_confirmation, class:"form-label" %>
             <%= f.password_field :password_confirmation, placeholder: "Password", autocomplete:"new-password", class: "form-control form-control-md" %>
           </div>

           <div class="actions text-center text-lg-start mt-4 pt-2">
            <%= f.submit "Sign Up", class:"btn btn-lg btn-primary", style:"padding-left: 2.5rem; padding-right: 2.5rem;" %>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</section>
